.header{
	position: fixed;
	top: 0;
	width: 100%;
	height: 100rpx;
	color: #ffffff;
	background-color: #d24b48;
	z-index: 2;
	display: flex;
}
.header .location{
	position: relative;
	text-align: center;
	line-height: 100rpx;
	padding-left: 40rpx;
	padding-right: 30rpx;
}
.header .location:after{
	display: block;
	content: "";
	position: absolute;
	top: 40rpx;
	right: 0rpx;
	width: 14rpx;
	height: 14rpx;
	transform: rotate(-45deg);
	border-left: 1px solid #ffffff;
	border-bottom: 1px solid #ffffff;
}
.header .switch{
	line-height: 100rpx;
	flex-grow: 1;
	display: flex;
	justify-content: center;
}
.header .switch .switch-con{
	display: inline-flex;
	width: 400rpx;
	height: 65rpx;
	line-height: 65rpx;
	margin-top: 17rpx;
	border-radius: 5px;
	border: 1px solid #ffffff;
	overflow: hidden;
}
.header .switch text{
	flex-grow: 1;
	text-align: center;
}
.header .switch text.cur{
	color: #d24b48;
	background-color: #ffffff;
}
.header .search{
	width: 100rpx;
	height: 100rpx;
	background: url(/images/search.png) center center no-repeat;
	background-size: 60% auto;
}
.swiper swiper{
	width: 100%;
	height: 175rpx;
	margin-top: 100rpx;
}
.swiper swiper image{
	width: 100%;
	height: 175rpx;
}
.movie{
	display: flex;
	padding: 20rpx 0;
	margin-left: 20rpx;
	border-bottom: 1px solid #d8d8d8;
	background-color: #ffffff;
}
.movie .cover image{
	width: 135rpx;
	height: 187rpx;
}
.movie .tit-sum{
	padding-left: 20rpx;
	flex-grow: 1;
}
.movie .tit{
	display: block;
	font-size: 32rpx;
	line-height: 75rpx;
}
.movie .sum,
.movie .oninfor{
	display: block;
	color: #666666;
	line-height: 50rpx;
}
.movie .score-buy{
	text-align: right;
	padding-right: 20rpx;
}
.movie .score{
	display: block;
	color: #f5953f;
	line-height: 75rpx;
}
.movie .score .numb{
	font-size: 32rpx;
}
.movie .buy{
	display: inline-block;
	width: 108rpx;
	height: 60rpx;
	text-align: center;
	color: #058ee7;
	line-height: 60rpx;
	border: 1px solid #058ee7;
	border-radius: 10rpx;
	margin-top: 24rpx;
}
.movie .buy-can{
	color: #d24b48;
	border-color: #d24b48;
}
